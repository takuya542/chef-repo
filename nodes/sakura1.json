{
  "run_list": [
    "adduser",
    "recipe[sudo]",
    "base_package",
    "dotfiles",
    "vim",
    "mysql",
    "plenv"
  ],
  "automatic": {
    "ipaddress": "sakura1"
  },
  "authorization": {
    "sudo": {
      "users":["onda","vagrant"],
      "groups":["onda", "vagrant"],
      "passwordless":"true",
